<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/cam_frameLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cam_imOverlay"
        app:layout_constraintBottom_toBottomOf="@id/cam_imOverlay"
        app:layout_constraintDimensionRatio="w,9:16"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <View
        android:background="@color/black_35p_transp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbarLayout"
        app:layout_constraintBottom_toTopOf="@id/cam_imOverlay" />
    <ImageView
        android:id="@+id/cam_imOverlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,9:16"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <View
        android:background="@color/black_35p_transp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/cam_layBottom"
        app:layout_constraintTop_toBottomOf="@id/cam_imOverlay" />
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLayout"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black_35p_transp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:titleTextColor="@color/white"
            app:subtitleTextColor="@color/white"
            android:theme="@style/ToolbarTheme"
            app:contentInsetStartWithNavigation="0dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/cam_layBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/black_35p_transp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cam_btRetakePicture"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:tint="@color/accent"
                android:src="@drawable/ic_undo"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cam_btTakePicture"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <com.google.android.material.card.MaterialCardView
                app:strokeWidth="5dp"
                app:strokeColor="@color/grey"
                app:cardCornerRadius="35dp"
                android:background="?selectableItemBackground"
                android:duplicateParentState="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cam_btConfirmPicture"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:tint="@color/accent"
                android:src="@drawable/ic_check"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/cam_progressBar"
        app:layout_constraintBottom_toBottomOf="@id/cam_layBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cam_layBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/WhiteControlTheme" />
</androidx.constraintlayout.widget.ConstraintLayout>